<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/olive_color">

    <!-- Image en arriÃ¨re-plan -->
    <ImageView
        android:id="@+id/pic_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:scaleType="center"
        android:src="@drawable/background_leaf" />

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="25dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/rounded_background" />

        <!-- Descriptif -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:padding="16dp"
            android:scrollbarThumbVertical="@color/brown_color"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/beige_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/joti_one"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:hint="Name"/>

                <TextView
                    android:id="@+id/plant_informations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/joti_one"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:hint="Informations :"/>

                <TextView
                    android:id="@+id/plant_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/joti_one"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:lineSpacingMultiplier="1.2"
                    android:textStyle="bold"
                    android:hint="Suspendisse lectus tellus, posuere sit amet dignissim mollis, laoreet sed dolor. Sed et metus ut elit sagittis ultrices egestas id orci. Fusce elit lectus, aliquet ac ligula ac, egestas placerat velit. Sed faucibus rutrum luctus. Fusce eleifend velit in metus interdum, quis pharetra orci tincidunt. Aliquam pretium at eros vitae pellentesque. Proin tempor ipsum a purus blandit, in pellentesque risus."/>


            </LinearLayout>

        </ScrollView>

        <!-- Bouton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/delete_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:hint="@string/delete"
                android:textSize="35sp"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/joti_one"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/light_cream"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/save"
                android:textSize="35sp"
                android:textColorHint="@color/light_cream"
                android:textStyle="bold"
                android:fontFamily="@font/joti_one"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/sage_green"/>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>